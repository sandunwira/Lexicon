{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Lexicon",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "all": false,
        "print": false,
        "setFullscreen": true,
        "setResizable": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "targets": "all",
      "deb": {
        "depends": []
      },
      "appimage": {
        "bundleMediaFramework": true
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "allowDowngrades": false,
        "wix": {
          "language": "en-US"
        }
      },
      "externalBin": [],
      "resources": [],
      "identifier": "com.lexicon.app",
      "publisher": "Sandun Wiratunga",
      "shortDescription": "An opensource dictionary app",
      "longDescription": "An opensource dictionary app",
      "category": "Education",
      "copyright": ""
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false,
      "dialog": true,
      "windows": {
        "installMode": "basicUi"
      }
    },
    "windows": [
      {
        "title": "Lexicon",
        "width": 1500,
        "height": 750,
        "url": "index.html",
        "fullscreen": false,
        "focus": true,
        "resizable": true,
        "decorations": true,
        "center": true,
        "visible": false
      },
      {
        "title": "Lexicon",
        "width": 450,
        "height": 200,
        "url": "splashscreen.html",
        "label": "splashscreen",
        "fullscreen": false,
        "focus": true,
        "alwaysOnTop": true,
        "resizable": false,
        "decorations": false,
        "center": true,
        "skipTaskbar": false
      }
    ]
  }
}
